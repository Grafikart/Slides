{% if this.isInCart %}
    <button
            {{ attributes }}
            class="bg-red-500 text-white px-3 py-1 rounded text-sm hover:bg-red-600 transition-colors duration-300"
            data-action="live#action"
            data-live-action-param="remove"
    >
        Retirer du panier
    </button>
{% else %}
    <button
            {{ attributes }}
            class="bg-indigo-500 text-white px-3 py-1 rounded text-sm hover:bg-indigo-600 transition-colors duration-300"
            data-action="live#action"
            data-live-action-param="add"
    >
        Ajouter au panier
    </button>
{% endif %}
